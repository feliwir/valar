<Window x:Class="valar_gui.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:valar_gui"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button IsEnabled="{Binding Session.Started,UpdateSourceTrigger=PropertyChanged}" Content="Button" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="75"/>
        <CheckBox IsChecked="{Binding Session.Started,UpdateSourceTrigger=PropertyChanged}"  Content="CheckBox" HorizontalAlignment="Left" Margin="320,152,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
